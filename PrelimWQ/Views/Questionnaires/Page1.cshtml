                            Most days
                            @Html.RadioButtonFor(m => m.A2_3h, "4")
                            Every day
                        </td>
                    </tr>
                    <tr>
                        <td>i. Knee pain</td>
                        <td>
                            @Html.RadioButtonFor(m => m.A2_3i, "1")
                            Never
                            @Html.RadioButtonFor(m => m.A2_3i, "2")
                            Some days
                            @Html.RadioButtonFor(m => m.A2_3i, "3")
                            Most days
                            @Html.RadioButtonFor(m => m.A2_3i, "4")
                            Every day
                        </td>
                    </tr>
                    <tr>
                        <td>j. Foot / ankle pain</td>
                        <td>
                            @Html.RadioButtonFor(m => m.A2_3j, "1")
                            Never
                            @Html.RadioButtonFor(m => m.A2_3j, "2")
