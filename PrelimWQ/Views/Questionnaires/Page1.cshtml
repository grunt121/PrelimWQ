                            @Html.RadioButtonFor(m => m.A2_3f, "1")
                            Never
                            @Html.RadioButtonFor(m => m.A2_3f, "2")
                            Some days
                            @Html.RadioButtonFor(m => m.A2_3f, "3")
                            Most days
                            @Html.RadioButtonFor(m => m.A2_3f, "4")
                            Every day
                        </td>
                    </tr>
                    <tr>
                        <td>g. Back pain</td>
